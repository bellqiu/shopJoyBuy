<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style field="style" type="com.spshop.admin.client.businessui.TopSellingManager.ProductInline">
		.productItem{
			display: inline-block;
			margin: 3px;
			width: 88px;
		}
		
		.productDesc{
			width: 100%;
			height: 4em;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:Button ui:field="productPicker" text="Pick products"/>
		<g:Button ui:field="save" text="Save"/>
		<g:Grid ui:field="namePanel">
			<g:row>
				<g:customCell>
					<g:Label text="Tab Name:"/>
				</g:customCell>
				<g:customCell>
					<g:TextBox ui:field="tabName"/>
				</g:customCell>
			</g:row>
		</g:Grid>
		<g:FlowPanel ui:field="host"/>
	</g:HTMLPanel>
</ui:UiBinder> 