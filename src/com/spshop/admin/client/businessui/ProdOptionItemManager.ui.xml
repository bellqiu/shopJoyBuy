<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.spshop.admin.client.businessui">
	<ui:style field="style" type="com.spshop.admin.client.businessui.ProdOptionItemManager.ItemManagerStyle">
		.header{
			background: #EEE;
			text-shadow: #fff 0 2px 2px;
			text-align: left;
			 font-weight: bold;
			 width: 100%;
		}
		.container{
			border:solid 1px #EEE;
		}
		
		.hide{
			display: none;
		}
		
	</ui:style>
		<g:VerticalPanel ui:field="host" styleName="{style.container}">
			<g:Grid styleName="{style.header}">
				<g:row>
					<g:customCell>
						<g:Label text="Name"/>
					</g:customCell>
					<g:customCell>
						<g:Label text="Value"/>
					</g:customCell>
				</g:row>
			</g:Grid>
		</g:VerticalPanel>
</ui:UiBinder> 